[Unit]
Description= a zookeeper cluster node service
After=network.target
[Service]
ExecStart=/opt/kafka_2.13-3.2.0/bin/zookeeper-server-start.sh /opt/kafka/config/zookeeper.properties
ExecStop=/opt/kafka_2.13-3.2.0/bin/zookeeper-server-stop.sh
Type=simple
User=zookeeper
[Install]
